{
  "name": "vue-showdown",
  "version": "2.4.1",
  "description": "Use showdown as a vue component",
  "keywords": [
    "vue",
    "showdown"
  ],
  "homepage": "https://vue-showdown.js.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/vue-showdown.git"
  },
  "license": "MIT",
  "author": "meteorlxy <meteor.lxy@foxmail.com> (https://www.meteorlxy.cn)",
  "main": "dist/vue-showdown.cjs.js",
  "unpkg": "dist/vue-showdown.min.js",
  "module": "dist/vue-showdown.esm.js",
  "browser": "dist/vue-showdown.min.js",
  "types": "dist/vue-showdown.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.js && rimraf dist/types",
    "dev": "vite",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "lint": "eslint --ext .js,.ts .",
    "version": "yarn build && conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add dist CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,html}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "@types/showdown": "^1.9.3",
    "showdown": "^1.9.1",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@meteorlxy/eslint-config-prettier": "^1.1.1",
    "@meteorlxy/eslint-config-prettier-typescript": "^1.0.6",
    "@meteorlxy/eslint-config-prettier-typescript-vue": "^1.0.7",
    "@meteorlxy/prettier-config": "^1.1.0",
    "@vuepress/plugin-pwa": "2.0.0-alpha.9",
    "@vuepress/plugin-pwa-popup": "2.0.0-alpha.9",
    "@vuepress/utils": "2.0.0-alpha.7",
    "eslint": "^7.15.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-dts": "^2.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "sort-package-json": "^1.48.0",
    "typescript": "^4.1.3",
    "vite": "1.0.0-rc.13",
    "vuepress": "2.0.0-alpha.11"
  }
}

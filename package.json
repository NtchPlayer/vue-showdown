{
  "name": "vue-showdown",
  "version": "3.3.0",
  "description": "Use showdown as a vue component",
  "keywords": [
    "vue",
    "showdown"
  ],
  "homepage": "https://vue-showdown.js.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/vue-showdown.git"
  },
  "license": "MIT",
  "author": "meteorlxy <meteor.lxy@foxmail.com> (https://www.meteorlxy.cn)",
  "exports": {
    "import": "./dist/vue-showdown.esm.js",
    "require": "./dist/vue-showdown.cjs.js"
  },
  "main": "./dist/vue-showdown.cjs.js",
  "unpkg": "./dist/vue-showdown.min.js",
  "module": "./dist/vue-showdown.esm.js",
  "browser": "./dist/vue-showdown.min.js",
  "types": "./dist/vue-showdown.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.js && rimraf dist/types",
    "dev": "vite",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "lint": "eslint --ext .js,.ts,.vue .",
    "prepare": "husky install",
    "publish": "git push origin main --tags",
    "version": "npm run lint && npm run build && conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add dist CHANGELOG.md"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,html}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "@types/showdown": "^2.0.0",
    "showdown": "^2.1.0",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@meteorlxy/eslint-config-prettier": "^2.16.0",
    "@meteorlxy/eslint-config-prettier-typescript-vue": "^2.16.0",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.16.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vuepress/client": "2.0.0-beta.50",
    "@vuepress/utils": "2.0.0-beta.50",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.33.0",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.7.4",
    "vite": "~3.0.9",
    "vuepress": "2.0.0-beta.50"
  }
}
